@model IndexViewModel

<div class="modal fade" id="modalAdicionarTarefa" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <div class="form-group">
                    <input type="text" id="campo-titulo" class="form-control field-borderless titulo-modal" placeholder="Titulo" />
                </div>
                <button type="button" class="close" data-dismiss="modal" aria-label="Fechar" id="close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="container">
                    <div class="row">
                        <div class="col-sm-6">
                            <div class="row">
                                <div class="col-sm-12">
                                    <div class="form-group">
                                        <label for="campo-descricao">Descrição</label>
                                        <textarea class="form-control" rows="5" id="campo-descricao"></textarea>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="row">
                                <div class="col-sm-12">
                                    <div class="form-group">
                                        <label for="campo-responsavel">Responsável</label>
                                        <select class="form-control" id="campo-responsavel">
                                            @foreach (var responsavel in Model.Responsaveis)
                                            {
                                                <option value="@responsavel.Id">@responsavel.Nome</option>
                                            }
                                        </select>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-sm-12">
                                    <div class="form-group">
                                        <label for="campo-urgencia">Nível de Urgencia</label>
                                        <select class="form-control" id="campo-urgencia">
                                            <option value="0">Baixo</option>
                                            <option value="1">Médio</option>
                                            <option value="2">Alto</option>
                                        </select>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-sm-12">
                                    <div class="form-group">
                                        <label for="campo-prazo">Prazo</label>
                                        <input type="date" class="form-control" id="campo-prazo" />
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button class="btn btn-secondary" id="btn-fechar" data-dismiss="modal">Fechar</button>
                <button class="btn btn-danger" id="btn-salvar" data-dismiss="modal">Salvar mudanças</button>
            </div>
        </div>
    </div>
</div>
<script src="~/js/site.js"></script>
