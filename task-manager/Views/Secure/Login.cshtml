@{
    Layout = null;
}

@model Usuario

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>TaskManager</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/login.css" />
    <link rel="icon" type="imagem/png" href="~/img/favicon.png" />

</head>
<body class="alignCenter">
    <div class="container alignCenter">
        <div class="mainbox alignCenter">
            <div class="logo">
                <img src="~/img/logo.png" />
                <h2>TaskManager</h2>
            </div>
            <form asp-action="Index" asp-controller="Secure" method="post">
                <div class="form-group">
                    <input type="email" class="form-control campos-login" asp-for="Email" placeholder="Email" />
                </div>
                <div class="form-group">
                    <input type="password" class="form-control campos-login" asp-for="Senha" placeholder="Senha" />
                </div>
                <button type="submit" class="btn btn-danger botao-entrar">
                    <span>ACESSAR</span>
                </button>
            </form>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/login.js"></script>
</body>
</html>
